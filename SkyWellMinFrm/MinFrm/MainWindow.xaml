            <Label x:Name="label12" Content="累计行驶里程" Grid.Row="2" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Height="40" Width="143" FontSize="22" Grid.Column="1" Foreground="White"/>
