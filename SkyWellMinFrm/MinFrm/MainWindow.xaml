        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="730" />
                <ColumnDefinition Width="520" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
